@model IEnumerable<NMCNPM_Nhom3.Models.Entities.TblBikeDetail>

@{
    ViewData["Title"] = "Danh sách Mẫu xe";
}

<div class="container">
    <h2 class="fw-bold text-primary text-center">🚲 Quản lý Mẫu xe</h2>

    <div class="d-flex justify-content-between my-3">
        <a asp-action="Index" asp-controller="BikeManager" class="btn btn-primary">
            <i class="bi bi-card-list"></i> 
            Danh sách xe
        </a>
        <div></div> <!-- Giữ khoảng trống bên trái -->
        <a asp-action="CreateBikeDetail" class="btn btn-info"><i class="bi bi-patch-plus"></i> Thêm mẫu mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên hãng</th>
                    <th scope="col">Loại xe</th>
                    <th scope="col">Cỡ khung</th>
                    <th scope="col">Chất liệu</th>
                    <th scope="col">Khối lượng (Kg)</th>
                    <th scope="col" style="width: 200px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FkIdBikeBrandNavigation.SName</td>
                        <td>@item.FkIdBikeTypeNavigation.SType</td>
                        <td>@item.SFrameSize</td>
                        <td>@item.SMaterial</td>
                        <td>@item.FWeight</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-action="ViewBikeDetail" asp-route-id="@item.PkIdBikeDetail" class="btn btn-info btn-sm">👁 Xem</a>
                            <a asp-action="EditBikeDetail" asp-route-id="@item.PkIdBikeDetail" class="btn btn-warning btn-sm">✏ Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
