@model IEnumerable<NMCNPM_Nhom3.Models.Entities.TblBike>

@{
    ViewData["Title"] = "Danh sách xe";
}

<div class="container">
    <h2 class="fw-bold text-primary text-center">🚲 Quản lý Xe Đạp</h2>

    <div class="d-flex justify-content-between my-3">
        <div></div> <!-- Giữ khoảng trống bên trái -->
        <a asp-action="Create" class="btn btn-success">➕ Thêm xe mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên xe</th>
                    <th scope="col">Tình trạng</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Giá thuê</th>
                    <th scope="col" style="width: 200px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SName</td>
                        <td>@item.SStatus</td>
                        <td>@item.SCondition</td>
                        <td>@string.Format("{0:N0}",@item.FRentalPrice) VNĐ</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-action="Details" asp-route-id="@item.PkIdBike" class="btn btn-info btn-sm">👁 Xem</a>
                            <a asp-action="Edit" asp-route-id="@item.PkIdBike" class="btn btn-warning btn-sm">✏ Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.PkIdBike" class="btn btn-danger btn-sm">🗑 Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
