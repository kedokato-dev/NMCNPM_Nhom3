@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var username = User.Identity.Name;
    var role = User.FindFirst(ClaimTypes.Role)?.Value ?? "ban";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Binary Bike</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css"/>
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <img src="~/assets/resources/BinaryBike.png" width="160" height="56" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
					@if (role == "Admin")
					{
						<!-- Hiển thị menu quản trị viên nếu là quản trị viên -->
						<li class="nav-item"><a class="nav-link" href="/Staff">Quản lý nhân viên</a></li>
						<li class="nav-item"><a class="nav-link" href="/AddBike">Quản lý xe</a></li>
					}else{
                        <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="/About">Bảng giá</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Contact">Liên hệ</a></li>
                    }

                </ul>
                <ul class="navbar-nav">
                    @if (isAuthenticated)
                    {
                        <!-- Hiển thị thông tin người dùng và nút đăng xuất nếu đã đăng nhập -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src=".//assets/resources/avatar.png" alt="Avatar" class="rounded-circle me-2" width="30" height="30">
                                @username
                                

                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/Profile">Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Login/Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item"><a class="btn btn-outline-primary me-2" href="/Login/Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="btn btn-primary" href="/Register">Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="content">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    </div>

    <footer class="bg-white text-dark text-center py-3 mt-4 border-top">
        <div class="container">
            <p>&copy; @DateTime.Now.Year Nhóm 3 - Nhập môn công nghệ phần mềm.</p>
        </div>
    </footer>

   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>