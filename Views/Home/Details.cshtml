@model NMCNPM_Nhom3.Models.Entities.TblBike
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/assets/resources/@Model.SImage" class="img-fluid w-100 rounded shadow" alt="@Model.SName">
        </div>

        <div class="col-md-6">
            <h2 class="fw-bold">@Model.SName</h2>
            <hr>

            <!-- Tình trạng xe -->
            <p class="card-text">
                <strong>Tình trạng:</strong>
                <span class="fw-bold @(Model.SStatus == "Mới" ? "text-success" : "text-warning")">
                    @Model.SStatus
                </span>
            </p>

            <!-- Trạng thái xe -->
            <p class="card-text">
                <strong>Trạng thái:</strong>
                <span class="fw-bold @(Model.SCondition == "Đã thuê" ? "text-danger" : "text-primary")">
                    @(Model.SCondition == "Đã thuê" ? "Đã thuê" : "Chưa thuê")
                </span>
            </p>

            <!-- Giá thuê -->
            <p class="card-text">
                <strong>Giá thuê:</strong>
                <span class="fw-bold text-danger fs-5">@string.Format("{0:N0}", Model.FRentalPrice) VNĐ/Giờ</span>
            </p>

            <!-- Thông tin bổ sung từ TblBikeDetail -->
            @if (Model != null && Model.FkIdBikeDetailNavigation != null)
            {
                <hr>
                <h4 class="fw-bold text-primary">🚲 Thông tin chi tiết</h4>

                <p class="card-text">
                    <strong class="text-success">🛵 Loại xe:</strong>
                    <span class="fw-bold text-dark">@Model.FkIdBikeDetailNavigation.FkIdBikeTypeNavigation.SType</span>
                </p>

                <p class="card-text">
                    <strong class="text-warning">🏭 Hãng sản xuất:</strong>
                    <span class="fw-bold text-dark">@Model.FkIdBikeDetailNavigation.FkIdBikeBrandNavigation.SName</span>
                </p>

                <p class="card-text">
                    <strong class="text-danger">📜 Mô tả:</strong>
                    <span class="fw-bold text-info">Xe này cực xịn nhé AE 😎🔥</span>
                </p>

                <!-- Mô tả về cửa hàng và xe cực chất -->
                <div class="mt-4 p-3 bg-light border rounded">
                    <h5 class="fw-bold text-dark">🏪 Về cửa hàng chúng tôi</h5>
                    <p class="text-muted">
                        Chào mừng bạn đến với <strong class="text-primary">Bike Rental Pro</strong> – địa điểm cho thuê xe hàng đầu! 🚴‍♂️
                        Chúng tôi cung cấp những mẫu xe <span class="fw-bold text-success">chất lượng cao</span> với giá cả hợp lý,
                        giúp bạn có những chuyến đi tuyệt vời trên mọi nẻo đường.
                    </p>

                    <h5 class="fw-bold text-dark">🔥 Vì sao chọn chúng tôi?</h5>
                    <ul class="list-unstyled">
                        <li>✅ <span class="text-success">Xe đời mới, động cơ mạnh mẽ(Động cơ Căng Hải)</span></li>
                        <li>✅ <span class="text-warning">Dịch vụ hỗ trợ 24/7</span></li>
                        <li>✅ <span class="text-primary">Giá cả hợp lý, không lo chặt chém</span></li>
                        <li>✅ <span class="text-danger">Bảo trì thường xuyên, đảm bảo an toàn</span></li>
                    </ul>

                    <p class="fw-bold text-info">🚀 Đến ngay cửa hàng để trải nghiệm dịch vụ chất lượng!</p>
                </div>
            }
            else
            {
                <p class="text-muted fst-italic">⚠ Không có thông tin chi tiết cho xe này.</p>
            }

            <hr>

            <!-- Nút đặt ngay -->
            @if (Model.SCondition == "Chưa thuê")
            {
                <a href="#" class="btn btn-primary w-100 rounded-pill">🚴 Đặt ngay</a>
            }
            else
            {
                <button class="btn btn-secondary w-100 rounded-pill" disabled>🚳 Đã thuê</button>
            }

            <!-- Nút quay lại danh sách -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark w-100 mt-3">⬅ Quay lại</a>
        </div>
    </div>
</div>
