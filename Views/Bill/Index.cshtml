@model IEnumerable<NMCNPM_Nhom3.Models.Entities.TblBill>

@{
    ViewData["Title"] = "Hóa đơn chưa thanh toán";
}

<h1 class="mb-4 mt-4 text-center text-primary">Hóa đơn chưa thanh toán</h1>

<div class="text-center mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary">Tạo hóa đơn mới</a>
</div>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Thời gian bắt đầu</th>
            <th>Thời gian kết thúc</th>
            @* <th>Phí phát sinh</th> *@
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.PkBillCode</td>
                <td>@bill.DBeginTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="@(bill.IStatus == 0 ? "disabled-field" : "")">@bill.DEndTime.ToString("dd/MM/yyyy HH:mm")</td>
                @* <td>@bill.FIncidentalCosts</td> *@
                <td>@(bill.IStatus.HasValue && bill.IStatus.Value == 1 ? "Chưa thanh toán" : "Đã thanh toán")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = bill.PkBillCode })" class="btn btn-warning">Xem chi tiết / Cập nhật</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    /* Bôi màu xám các trường không nhập được */
    .disabled-field {
        background-color: #f0f0f0; 
        color: #777; 
        pointer-events: none; 
    }
</style>
