@model IEnumerable<NMCNPM_Nhom3.Models.Entities.ViewInvoice>

@{
    ViewData["Title"] = "Hóa đơn chưa thanh toán";
}

<h1 class="mb-4 mt-4 text-center text-primary">Hóa đơn chưa thanh toán</h1>

<div class="text-center mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary">Tạo hóa đơn mới</a>
</div>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Tên khách hàng</th>
            <th>Thời gian bắt đầu</th>
            <th>Tiền cọc</th>
            <th>Hành động</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.InvoiceID</td>
                    <td>@bill.CustomerName</td>
                <td>@bill.TimeBegin.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@bill.TotalDeposit.ToString("N0")</td>
                
                <td>
                    <a href="@Url.Action("Edit", new { id = bill.InvoiceID })" class="btn btn-warning">Xem chi tiết / Cập nhật</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    /* Bôi màu xám các trường không nhập được */
    .disabled-field {
        background-color: #f0f0f0; 
        color: #777; 
        pointer-events: none; 
    }
</style>
